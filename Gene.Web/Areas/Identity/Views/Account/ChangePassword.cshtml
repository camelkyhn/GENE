@model Gene.Middleware.ViewModels.Identity.ChangePasswordViewModel

@{
    ViewBag.Title = "Change Password";
}

<gene-form
    area="Identity"
    controller="Account"
    action="ChangePassword"
    method="post"
    class="container row"
    contentClass="col s12 m8"
    title="@ViewBag.Title"
    subTitle="You can change your password by using this form."
    message="@Model.NotifyMessage">
    <gene-row>
        <gene-column small="12">
            <gene-password model="ChangePassword.CurrentPassword"/>
        </gene-column>
    </gene-row>
    <gene-row>
        <gene-column small="12">
            <gene-password model="ChangePassword.NewPassword"/>
        </gene-column>
    </gene-row>
    <gene-row>
        <gene-column small="12">
            <gene-password model="ChangePassword.ConfirmPassword"/>
        </gene-column>
    </gene-row>
    <gene-row>
        <gene-column small="12">
            <gene-submit-button-group text="Change Password"/>
        </gene-column>
    </gene-row>
</gene-form>
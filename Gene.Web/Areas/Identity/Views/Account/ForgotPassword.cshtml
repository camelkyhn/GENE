@model Gene.Middleware.ViewModels.Identity.ForgotPasswordViewModel

@{
    ViewBag.Title = "Forgot Password?";
}

<gene-form
    area="Identity"
    controller="Account"
    action="ForgotPassword"
    method="post"
    class="container row"
    contentClass="col s12 m8"
    title="@ViewBag.Title"
    subTitle="You can send password reset link to your email address by using this form."
    message="@Model.NotifyMessage">
    <gene-row>
        <gene-column small="12">
            <gene-email model="ForgotPassword.Email"/>
        </gene-column>
    </gene-row>
    <gene-row>
        <gene-column small="12">
            <gene-submit-button-group text="Send Password Reset Link"/>
        </gene-column>
    </gene-row>
</gene-form>
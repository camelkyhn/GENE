@model Gene.Middleware.ViewModels.Identity.ResetPasswordViewModel

@{
    ViewBag.Title = "Reset Password";
}

<gene-form
    area="Identity"
    controller="Account"
    action="ResetPassword"
    method="post"
    class="container row"
    contentClass="col s12 m8"
    title="@ViewBag.Title"
    subTitle="You can reset your password by using this form."
    message="@Model.NotifyMessage">
    <gene-row>
        <gene-column small="12">
            <gene-password model="ResetPassword.Password"/>
        </gene-column>
    </gene-row>
    <gene-row>
        <gene-column small="12">
            <gene-password model="ResetPassword.ConfirmPassword"/>
        </gene-column>
    </gene-row>
    <gene-row>
        <gene-column small="12">
            <gene-submit-button-group text="Reset Password"/>
        </gene-column>
    </gene-row>
    <input asp-for="ResetPassword.Token" hidden/>
    <input asp-for="ResetPassword.UserId" hidden/>
</gene-form>
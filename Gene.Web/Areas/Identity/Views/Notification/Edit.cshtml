@using Gene.Middleware.Bases
@model Gene.Middleware.ViewModels.Identity.NotificationViewModel

@{
    ViewBag.Title = "Edit Notification";
    Layout = "_Layout";
}

<gene-form
    area="Identity"
    controller="Notification"
    action="Edit"
    method="post"
    class="container row"
    contentClass="col s12 m8"
    title="@ViewBag.Title"
    subTitle="You can edit the notification by using this form."
    message="@Model.NotifyMessage">
    <gene-row>
        <gene-column small="12">
            <gene-text model="Notification.Title"/>
        </gene-column>
    </gene-row>
    <gene-row>
        <gene-column small="12">
            <gene-textarea model="Notification.Description"/>
        </gene-column>
    </gene-row>
    <gene-row>
        <gene-column small="12">
            <gene-checkbox model="Notification.IsOpened"/>
        </gene-column>
    </gene-row>
    <gene-row>
        <gene-column small="12">
            <gene-select model="Notification.ReceiverUserId" items="@Model.Users" textField="Email" valueField="Id"/>
        </gene-column>
    </gene-row>
    <gene-row>
        <gene-column small="12">
            <gene-enum-select model="Notification.Status" type="@typeof(Status)"/>
        </gene-column>
    </gene-row>
    <gene-row>
        <gene-column small="12">
            <gene-submit-button-group text="Edit"/>
        </gene-column>
    </gene-row>
    <input type="hidden" asp-for="Notification.Id"/>
</gene-form>
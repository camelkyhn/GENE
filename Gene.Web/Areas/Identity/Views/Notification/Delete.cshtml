@model Gene.Middleware.ViewModels.Identity.NotificationViewModel

@{
    ViewBag.Title = "Delete Notification";
    Layout = "_Layout";
}

<gene-form
    area="Identity"
    controller="Notification"
    action="Delete"
    method="post"
    class="container"
    contentClass="col s12 m8"
    message="@Model.NotifyMessage"
    title="@ViewBag.Title"
    subTitle="Are you sure to delete this notification?">
    <gene-row>
        <gene-column small="12" medium="6">
            <gene-text model="NotificationDetail.Title" disabled="true"/>
        </gene-column>
        <gene-column small="12" medium="6">
            <gene-textarea model="NotificationDetail.Description" disabled="true"/>
        </gene-column>
        <gene-column small="12" medium="6">
            <gene-checkbox model="NotificationDetail.IsOpened" disabled="true"/>
        </gene-column>
        <gene-column small="12" medium="6">
            <gene-text model="NotificationDetail.ReceiverUser.Email" disabled="true" label="Receiver"/>
        </gene-column>
        <gene-column small="12" medium="6">
            <gene-text model="NotificationDetail.Status" disabled="true"/>
        </gene-column>
        <gene-column small="12" medium="6">
            <gene-text model="NotificationDetail.CreatedUser.Email" disabled="true" label="Created User"/>
        </gene-column>
        <gene-column small="12" medium="6">
            <gene-text model="NotificationDetail.UpdatedUser.Email" disabled="true" label="Updated User"/>
        </gene-column>
        <gene-column small="12" medium="6">
            <gene-date model="NotificationDetail.CreatedDate" disabled="true"/>
        </gene-column>
        <gene-column small="12" medium="6">
            <gene-date model="NotificationDetail.UpdatedDate" disabled="true"/>
        </gene-column>
    </gene-row>
    <gene-row>
        <gene-column small="12">
            <gene-submit-button-group text="Delete"/>
        </gene-column>
    </gene-row>
    <input type="hidden" name="id" value="@Model.NotificationDetail.Id"/>
</gene-form>
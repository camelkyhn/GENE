@model Gene.Middleware.ViewModels.Core.ActionViewModel

@{
    ViewBag.Title = "Delete Action";
    Layout = "_Layout";
}

<gene-form
    area="Core"
    controller="Action"
    action="Delete"
    method="post"
    class="container"
    contentClass="col s12 m8"
    message="@Model.NotifyMessage"
    title="@ViewBag.Title"
    subTitle="Are you sure to delete this action?">
    <gene-row>
        <gene-column small="12" medium="6">
            <gene-text model="ActionDetail.Name" disabled="true"/>
        </gene-column>
        <gene-column small="12" medium="6">
            <gene-text model="ActionDetail.Status" disabled="true"/>
        </gene-column>
        <gene-column small="12" medium="6">
            <gene-text model="ActionDetail.CreatedUser.Email" disabled="true" label="Created User"/>
        </gene-column>
        <gene-column small="12" medium="6">
            <gene-text model="ActionDetail.UpdatedUser.Email" disabled="true" label="Updated User"/>
        </gene-column>
        <gene-column small="12" medium="6">
            <gene-date model="ActionDetail.CreatedDate" disabled="true"/>
        </gene-column>
        <gene-column small="12" medium="6">
            <gene-date model="ActionDetail.UpdatedDate" disabled="true"/>
        </gene-column>
    </gene-row>
    <gene-row>
        <gene-column small="12">
            <gene-submit-button-group text="Delete"/>
        </gene-column>
    </gene-row>
    <input type="hidden" name="id" value="@Model.ActionDetail.Id"/>
</gene-form>
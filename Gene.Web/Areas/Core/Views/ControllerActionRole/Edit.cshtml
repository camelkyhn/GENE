@using Gene.Middleware.Bases
@model Gene.Middleware.ViewModels.Core.ControllerActionRoleViewModel

@{
    ViewBag.Title = "Edit Controller Action Role";
    Layout = "_Layout";
}

<gene-form
    area="Core"
    controller="ControllerActionRole"
    action="Edit"
    method="post"
    class="container row"
    contentClass="col s12 m8"
    title="@ViewBag.Title"
    subTitle="You can edit the controller action role by using this form."
    message="@Model.NotifyMessage">
    <gene-row>
        <gene-column small="12">
            <gene-select model="ControllerActionRole.ControllerActionId" items="@Model.ControllerActions" textField="Controller.Name+Action.Name" valueField="Id"/>
        </gene-column>
    </gene-row>
    <gene-row>
        <gene-column small="12">
            <gene-select model="ControllerActionRole.RoleId" items="@Model.Roles" textField="Name" valueField="Id"/>
        </gene-column>
    </gene-row>
    <gene-row>
        <gene-column small="12">
            <gene-enum-select model="ControllerActionRole.Status" type="@typeof(Status)"/>
        </gene-column>
    </gene-row>
    <gene-row>
        <gene-column small="12">
            <gene-submit-button-group text="Edit"/>
        </gene-column>
    </gene-row>
    <input type="hidden" asp-for="ControllerActionRole.Id"/>
</gene-form>